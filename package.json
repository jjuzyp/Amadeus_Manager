{
  "name": "amadeusmanager",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "webpack --config webpack.config.js && npm run build-main",
    "build-main": "tsc --project tsconfig.main.json && copy src\\preload.js dist\\preload.js",
    "dev": "webpack --config webpack.config.js --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^24.2.0",
    "css-loader": "^7.1.2",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@jup-ag/wallet-adapter": "^0.2.3",
    "@solana/spl-token": "^0.4.13",
    "@solana/spl-token-metadata": "^0.1.6",
    "@solana/web3.js": "^1.98.4",
    "@types/bs58": "^4.0.4",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "bs58": "^6.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5"
  },
  "build": {
    "appId": "com.amadeusmanager.app",
    "productName": "Amadeus Manager",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "index.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "config.json",
        "to": "config.json"
      },
      {
        "from": "wallets.json",
        "to": "wallets.json"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "Logo3.ico",
      "signAndEditExecutable": false,
      "forceCodeSigning": false
    }
  }
}
